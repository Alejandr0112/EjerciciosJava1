//Ejercicio1 While - For
function calcularFactorial() {
  let numero = prompt("Por favor, ingrese un número entero no negativo:");
  
  numero = Number(numero);
  
  if (isNaN(numero) || !Number.isInteger(numero) || numero < 0) {
    alert("Por favor, ingrese un número entero no negativo válido.");
  } else {
    let factorial = 1;
    let i = 1;
    
    while (i <= numero) {
      factorial *= i;
      i++;
    }
    
    alert("El factorial de " + numero + " es " + factorial + ".");
  }
}

calcularFactorial();

//Ejercicio2
function mostrarImpares() {
  let numero = prompt("Por favor, ingrese un número mayor a 10 y menor que 30:");
  
  numero = Number(numero);
  
  if (isNaN(numero) || !Number.isInteger(numero) || numero <= 10 || numero >= 30) {
    alert("Por favor, ingrese un número entero válido que sea mayor a 10 y menor que 30.");
  } else {
    let impares = "Números impares desde 1 hasta " + numero + ":";
    
    for (let i = 1; i <= numero; i++) {
      if (i % 2 !== 0) {
        impares += " " + i;
      }
    }
    
    alert(impares);
  }
}

mostrarImpares();

//Ejercicio3
function mostrarImpares() {
  let numero = prompt("Por favor, ingrese un número mayor a 10 y menor que 30:");
  
  numero = Number(numero);
  
  if (isNaN(numero) || !Number.isInteger(numero) || numero <= 10 || numero >= 30) {
    alert("Por favor, ingrese un número entero válido que sea mayor a 10 y menor que 30.");
  } else {
    let impares = "Números impares desde 1 hasta " + numero + ":";
    let i = 1;
    
    while (i <= numero) {
      if (i % 2 !== 0) {
        impares += " " + i;
      }
      i++;
    }
    
    alert(impares);
  }
}

mostrarImpares();
